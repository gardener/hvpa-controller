            inputs:
              repos:
                source: ~
              steps:
                build: ~
    steps:
      check:
        image: 'golang:1.15.3'
      integration_test:
        image: 'golang:1.15.3'
      build:
        image: 'golang:1.15.3'
        output_dir: 'binary'

  jobs:
    head-update:
      traits:
        component_descriptor: ~
        draft_release: ~
    pull-request:
      traits:
        pull-request: ~
    release:
      traits:
        version:
          preprocess: 'finalize'
        release:
          nextversion: 'bump_minor'
          git_tags:
          - ref_template: 'refs/tags/{VERSION}'
          - ref_template: 'refs/tags/api/{VERSION}'
        slack:
          default_channel: 'internal_scp_workspace'
