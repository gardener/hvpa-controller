  template: 'default'
  base_definition:
    repo: ~
    traits:
      version:
        preprocess:
          'inject-commit-hash'
        inject_effective_version: true
      publish:
        oci-builder: docker-buildx
        platforms:
        - linux/amd64
        - linux/arm64
        dockerimages:
          hvpa-controller:
            registry: 'gcr-readwrite'
            image: 'eu.gcr.io/gardener-project/gardener/hvpa-controller'
